@import "~/.cache/wal/colors-rofi-dark"

configuration {
    show-icons: true;
}

* {
    font: "uzura_font 14";
    background-color: transparent;
    text-color: @foreground;
    margin: 0px;
    padding: 0px;
    spacing: 0px;
}

window {
    location: center;
    width: 90%;
    height: 95%;
    border-radius: 12px;
    background-color: @background;
    border: 2px solid;
    border-color: @selected-normal-background;
    anchor: center;
    location: center;
}

mainbox {
    padding: 20px;
    background-color: @background;
    children: [ listview ];
}

inputbar {
    background-color: @normal-background;
    border-radius: 8px;
    padding: 12px 16px;
    spacing: 10px;
    children: [ prompt, entry ];
    margin: 0px 0px 15px 0px;
}

prompt {
    text-color: @selected-normal-background;
    background-color: transparent;
}

entry {
    placeholder: "Search...";
    placeholder-color: @urgent-background;
    text-color: @foreground;
    background-color: transparent;
}

listview {
    orientation: horizontal;
    background-color: transparent;
    columns: 30;
    lines: 4;
    spacing: 0px;
    cycle: false;
    scrollbar: false;
    fixed-height: false;
    margin: 5% 5% 0 5.5%;
}

element {
    orientation: vertical;
    padding: 0em;
    spacing: 8px;
    border-radius: 8px;
    background-color: @normal-background;
    border: 2px solid;
    width: 20%;
    height: 10%;
}

element normal.normal {
    background-color: @normal-background;
    text-color: @foreground;
    border-color: transparent;
}

element selected.normal {
    background-color: @normal-background;
    text-color: @selected-normal-background;
    border-color: @selected-normal-background;
}

element-icon {
    size: 70%;
    border-radius: 6px;
    background-color: transparent;
    horizontal-align: 0.5;
    margin: 0 0 0em 0;
}

element-text {
    text-color: inherit;
    background-color: transparent;
    horizontal-align: 0.5;
    vertical-align: 0.5;
    enabled: false;
}
